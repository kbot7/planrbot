@page "/planner"

<MudLayout>
    <MudAppBar Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" Color="Color.Inherit" />
        <MudTypography Variant="TypographyVariant.H6" Class="ml-2">@PageTitle</MudTypography>
    </MudAppBar>
    <MudLayout>
        <MudLayout>
            <MudContainer>
                <MudPaper>
                    <MudTabs>
                        @foreach (var day in DaysOfWeek)
                        {
                            <MudTabLabel Text="@day.DayOfWeek.ToString().Substring(0, 3)" />
                        }
                    </MudTabs>
                    <MudTabPanels>
                        @foreach (var day in DaysOfWeek)
                        {
                            <MudTabPanel>
                                <MudList>
                                    @foreach (var task in day.Tasks)
                                    {
                                        <MudListItem Text="@task.Description" />
                                    }
                                </MudList>
                            </MudTabPanel>
                        }
                    </MudTabPanels>
                </MudPaper>
            </MudContainer>
        </MudLayout>
    </MudLayout>
</MudLayout>

@code {

    public class Day
    {
        public DateTime DayOfWeek { get; set; }
        public IEnumerable<Task> Tasks { get; set; }
    }
    public class Task
    {
        public string Description { get; set; }
    }

    private string PageTitle = "Planner";
    private bool DrawerOpen = false;
    private DateTime CurrentDate = DateTime.Today;
    private List<Day> DaysOfWeek = new List<Day>
    {
        new Day { DayOfWeek = DateTime.Today, Tasks = new List<Task> { new Task { Description = "Task 1" }, new Task { Description = "Task 2" } } },
        new Day { DayOfWeek = DateTime.Today.AddDays(1), Tasks = new List<Task> { new Task { Description = "Task 3" } } },
        new Day { DayOfWeek = DateTime.Today.AddDays(2), Tasks = new List<Task> { new Task { Description = "Task 4" } } },
        new Day { DayOfWeek = DateTime.Today.AddDays(3), Tasks = new List<Task> { new Task { Description = "Task 5" } } },
        new Day { DayOfWeek = DateTime.Today.AddDays(4), Tasks = new List<Task> { new Task { Description = "Task 6" } } },
        new Day { DayOfWeek = DateTime.Today.AddDays(5), Tasks = new List<Task> { new Task { Description = "Task 7" } } },
        new Day { DayOfWeek = DateTime.Today.AddDays(6), Tasks = new List<Task> { new Task { Description = "Task 8" } } }
    };

}